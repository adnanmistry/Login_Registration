@page
@model Personal_Blog.Pages.Contact.IndexModel
@{
    ViewData["Title"] = "Contact Us";
}
<h2>Contact Us</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Contact.Name"></label>
        <input type="text" asp-for="Contact.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contact.Email"></label>
        <input type="email" asp-for="Contact.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contact.Message"></label>
        <textarea asp-for="Contact.Message" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form> @if (Model.MessageSent)
{
     <p>Thank you for your message. We will get back to you soon.</p>
}   